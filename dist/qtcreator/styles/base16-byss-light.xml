<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Byss Light">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Byss Light scheme by Billie Thompson (http://github.com/PurpleBooth)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#0077b6" background="#f7fdfe"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#bdecf5"/>
  <style name="CurrentLine" background="#48cae4"/>
  <style name="LineNumber" foreground="#48cae4"/>
  <style name="CurrentLineNumber" foreground="#0096c7" bold="true"/>
  <style name="SearchResult" background="#daf5fa"/>
  <style name="Parentheses" background="#bdecf5" />
  <style name="ParenthesesMismatch" background="#3B60E4" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#010228" background="#48cae4"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#48cae4"/>
  <style name="Occurrences.Rename" background="#0096c7"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#1BE7FF"/>

  <!-- language primitives -->
  <style name="Number" foreground="#1BE7FF"/>
  <style name="String" foreground="#40F99B"/>
  <style name="Keyword" foreground="#3B60E4"/>
  <style name="Operator" foreground="#0077b6"/>
  <style name="Preprocessor" foreground="#BA0AFF"/>
  <style name="Label" foreground="#FF00A0"/>

  <!-- types, classes -->
  <style name="Type" foreground="#F9A03F"/>
  <style name="PrimitiveType" foreground="#3B60E4"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#BA0AFF"/>
  <style name="VirtualMethod" foreground="#BA0AFF" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#023e8a"/>
  <style name="Local" foreground="#0077b6"/>
  <style name="Global" foreground="#0077b6"/>
  <style name="Static" foreground="#0077b6"/>
  <style name="JsScopeVar" foreground="#0077b6" italic="true"/>
  <style name="JsImportVar" foreground="#0077b6" italic="true"/>
  <style name="JsGlobalVar" foreground="#0077b6" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#bdecf5"/>

  <!-- comments -->
  <style name="Comment" foreground="#48cae4"/>
  <style name="DisabledCode" foreground="#48cae4"/>
  <style name="Doxygen.Comment" foreground="#48cae4"/>
  <style name="Doxygen.Tag" foreground="#48cae4"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#3B60E4"/>
  <style name="Binding" foreground="#FF00A0"/>
  <style name="QmlExternalId" foreground="#BA0AFF" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#BA0AFF" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#3B60E4"/>
  <style name="DiffLocation" foreground="#BA0AFF"/>
  <style name="AddedLine" foreground="#40F99B"/>
  <style name="RemovedLine" foreground="#F9A03F"/>
  <style name="LogChangeLine" foreground="#FF00A0"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#3B60E4"/>
  <style name="DiffContextLine" foreground="#BA0AFF"/>
  <style name="DiffSourceLine" foreground="#40F99B"/>
  <style name="DiffSourceChar" foreground="#F9A03F" background="#daf5fa"/>
  <style name="DiffDestLine" foreground="#40F99B"/>
  <style name="DiffDestChar" foreground="#F9A03F" background="#daf5fa"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#FF00A0" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#FF00A0" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#F9A03F" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#F9A03F" underlineStyle="DotLine"/>
</style-scheme>
